# Enhanced OCR Configuration
# Copy this to .env and configure as needed

# Basic OCR Settings
ENABLE_CLOUD_OCR=false
DEFAULT_OCR_PROVIDER=tesseract
DEFAULT_OCR_LANGUAGE=eng

# Google Vision API (Optional)
GOOGLE_VISION_API_KEY=your_google_vision_api_key_here
GOOGLE_VISION_PROJECT_ID=your_project_id

# Azure Computer Vision (Optional)
AZURE_VISION_KEY=your_azure_vision_key_here
AZURE_VISION_ENDPOINT=https://your-resource.cognitiveservices.azure.com/

# OCR Processing Limits
MAX_FILE_SIZE_MB=50
MAX_BATCH_FILES=20
MAX_CONCURRENT_JOBS=3
PROCESSING_TIMEOUT_MS=300000

# Tesseract Configuration
TESSERACT_WORKER_PATH=/usr/bin/tesseract
TESSERACT_DATA_PATH=/usr/share/tesseract-ocr/tessdata

# Image Preprocessing
ENABLE_IMAGE_PREPROCESSING=true
IMAGE_RESIZE_HEIGHT=2000
IMAGE_QUALITY=95
SHARPEN_SIGMA=1.0
BRIGHTNESS_ADJUSTMENT=1.1
CONTRAST_ADJUSTMENT=1.2

# Table Detection Settings
ENABLE_TABLE_DETECTION=true
TABLE_MIN_ROWS=2
TABLE_MAX_COLUMN_VARIATION=0.3
TABLE_LINE_THRESHOLD_PIXELS=10

# Performance Settings
UPLOAD_CLEANUP_DELAY_MS=5000
OCR_CACHE_TTL_HOURS=24
ENABLE_RESULT_CACHING=true

# Language Detection
ENABLE_AUTO_LANGUAGE_DETECTION=true
LANGUAGE_DETECTION_CONFIDENCE_THRESHOLD=0.7

# Logging and Monitoring
LOG_OCR_PROCESSING_TIMES=true
LOG_CONFIDENCE_SCORES=true
ENABLE_OCR_METRICS=true

# File Storage (for processed results)
OCR_RESULTS_STORAGE_PATH=./uploads/ocr-results
CLEANUP_PROCESSED_FILES=true
RETAIN_RESULTS_DAYS=7

# Security
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,image/tiff,image/bmp,application/pdf
SCAN_UPLOADED_FILES=false
MAX_UPLOAD_RATE_PER_MINUTE=30

# Development and Testing
ENABLE_MOCK_OCR=false
MOCK_OCR_CONFIDENCE=0.95
MOCK_OCR_PROCESSING_TIME=1000
ENABLE_OCR_DEBUGGING=false