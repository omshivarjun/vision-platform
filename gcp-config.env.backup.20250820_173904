# =============================================================================
# GOOGLE CLOUD PLATFORM (GCP) CONFIGURATION
# =============================================================================
# Add these to your main .env file

# Google Cloud Platform Configuration
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_CREDENTIALS=path/to/service-account-key.json
GOOGLE_CLOUD_STORAGE_BUCKET=vision-platform-files
GOOGLE_CLOUD_REGION=us-central1
GOOGLE_CLOUD_ZONE=us-central1-a

# Google API Key (for Translation, Vision, etc.)
GOOGLE_API_KEY=your-google-api-key

# GEMINI AI Configuration
GEMINI_MODEL=gemini-2.5-pro
GEMINI_MAX_TOKENS=8192
ENABLE_GEMINI_FUNCTION_CALLING=false

# Google Cloud Services
GOOGLE_CLOUD_TRANSLATION_API=true
GOOGLE_CLOUD_VISION_API=true
GOOGLE_CLOUD_SPEECH_API=true
GOOGLE_CLOUD_TEXT_TO_SPEECH_API=true

# Storage Configuration
STORAGE_PROVIDER=gcp
DEFAULT_STORAGE_BUCKET=vision-platform-files

# Authentication
GOOGLE_CLOUD_AUTH_TYPE=service_account
GOOGLE_CLOUD_AUTH_PROJECT_ID=your-gcp-project-id

# Monitoring & Logging
GOOGLE_CLOUD_LOGGING=true
GOOGLE_CLOUD_MONITORING=true
GOOGLE_CLOUD_ERROR_REPORTING=true

# Cost Optimization
GOOGLE_CLOUD_BILLING_ACCOUNT=your-billing-account
GOOGLE_CLOUD_BUDGET_ALERTS=true
GOOGLE_CLOUD_QUOTA_LIMITS=true
