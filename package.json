{
  "name": "multimodal-platform",
  "version": "1.0.0",
  "description": "Cross-language Multimodal Translator and Accessibility Companion Platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:mobile\"",
    "dev:web": "cd apps/web && npm run dev",
    "dev:mobile": "cd apps/mobile && npm run start",
    "dev:api": "echo \"API service is running in Docker on port 3001\"",
    "dev:ai": "echo \"AI service is running in Docker on port 8000\"",
    "build": "npm run build:shared && npm run build:web && npm run build:api",
    "build:shared": "cd packages/shared && npm run build",
    "build:web": "cd apps/web && npm run build",
    "build:api": "cd services/api && npm run build",
    "test": "npm run test:shared && npm run test:web && npm run test:api && npm run test:ai",
    "test:shared": "cd packages/shared && npm run test",
    "test:web": "cd apps/web && npm run test",
    "test:api": "cd services/api && npm run test",
    "test:ai": "cd services/ai && python -m pytest",
    "lint": "npm run lint:shared && npm run lint:web && npm run lint:api",
    "lint:shared": "cd packages/shared && npm run lint",
    "lint:web": "cd apps/web && npm run lint",
    "lint:api": "cd services/api && npm run lint",
    "format": "npm run format:shared && npm run format:web && npm run format:api",
    "format:shared": "cd packages/shared && npm run format",
    "format:web": "cd apps/web && npm run format",
    "format:api": "cd services/api && npm run format",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.override.yml up -d",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose down",
    "setup": "npm install && npm run setup:db && npm run setup:seeds",
    "setup:db": "cd services/api && npm run db:migrate && npm run db:seed",
    "setup:seeds": "cd scripts && node seed-data.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/multimodal-platform.git"
  },
  "keywords": [
    "multimodal",
    "translation",
    "accessibility",
    "ai",
    "ocr",
    "speech-to-text",
    "text-to-speech"
  ],
  "author": "Your Organization",
  "license": "MIT"
}
