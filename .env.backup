# =============================================================================
# MULTIMODAL PLATFORM ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your actual values
# cp env.example .env

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3001
LOG_LEVEL=debug

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB
MONGODB_URI=mongodb://admin:password123@localhost:27017/multimodal-platform?authSource=admin
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password123
MONGO_DATABASE=multimodal-platform

# Redis
REDIS_URL=redis://localhost:6379

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# OAuth2 (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_TIMEOUT=30000

# OpenAI (Optional - for cloud AI features)
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORGANIZATION=your-openai-org-id

# Hugging Face (Optional - for local model fallbacks)
HUGGINGFACE_API_KEY=your-huggingface-api-key
HUGGINGFACE_MODEL_CACHE=/app/models

# Local Models Configuration
USE_LOCAL_MODELS=true
MODEL_CACHE_DIR=/app/models
DOWNLOAD_MODELS_ON_STARTUP=true

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
# AWS S3 (Production)
S3_ENDPOINT=https://s3.amazonaws.com
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_BUCKET=multimodal-files
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=false

# Local S3 (Development - MinIO)
# S3_ENDPOINT=http://localhost:9000
# S3_ACCESS_KEY=minioadmin
# S3_SECRET_KEY=minioadmin123
# S3_BUCKET=multimodal-files
# S3_REGION=us-east-1
# S3_FORCE_PATH_STYLE=true

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_URL=http://localhost:3000
VITE_API_URL=http://localhost:3001
VITE_SOCKET_URL=http://localhost:3001
VITE_AI_SERVICE_URL=http://localhost:8000

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Sentry (Optional - for error tracking)
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_OFFLINE_TRANSLATION=true
ENABLE_VOICE_FEATURES=true
ENABLE_OCR_FEATURES=true
ENABLE_SCENE_DESCRIPTION=true
ENABLE_NAVIGATION_FEATURES=true
ENABLE_PRIVACY_MODE=true

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# Uncomment these for development
# DEBUG=1
# NODE_ENV=development
# LOG_LEVEL=debug

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Uncomment these for production
# NODE_ENV=production
# LOG_LEVEL=info
# SENTRY_DSN=your-production-sentry-dsn
# JWT_SECRET=your-production-jwt-secret
# MONGODB_URI=your-production-mongodb-uri
# REDIS_URL=your-production-redis-url

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test Database
TEST_MONGODB_URI=mongodb://admin:password123@localhost:27017/multimodal-test?authSource=admin
TEST_REDIS_URL=redis://localhost:6379/1

# Test Timeouts
TEST_TIMEOUT=10000
E2E_TIMEOUT=30000

# =============================================================================
# CI/CD CONFIGURATION
# =============================================================================
# GitHub Actions
GITHUB_TOKEN=your-github-token
GITHUB_REPOSITORY=your-org/multimodal-platform

# Docker Registry
DOCKER_REGISTRY=your-registry.com
DOCKER_USERNAME=your-username
DOCKER_PASSWORD=your-password

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# Google Cloud (Optional)
GOOGLE_CLOUD_PROJECT=your-gcp-project
GOOGLE_CLOUD_CREDENTIALS=path/to/service-account.json

# Azure (Optional)
AZURE_STORAGE_ACCOUNT=your-azure-storage-account
AZURE_STORAGE_KEY=your-azure-storage-key
AZURE_STORAGE_CONTAINER=multimodal-files

# =============================================================================
# SECURITY HEADERS
# =============================================================================
CORS_ORIGIN=http://localhost:3000
HELMET_CONTENT_SECURITY_POLICY=true
HELMET_HSTS_MAX_AGE=31536000

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_CHECK_PERIOD=600

# =============================================================================
# NOTIFICATIONS (Optional)
# =============================================================================
# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Push Notifications
FCM_SERVER_KEY=your-fcm-server-key
APN_KEY_ID=your-apn-key-id
APN_TEAM_ID=your-apn-team-id
APN_PRIVATE_KEY=path/to/apn-private-key.p8
