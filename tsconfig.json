{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@multimodal/shared": ["packages/shared/src"],
      "@/*": ["apps/web/src/*"]
    }
  },
  "include": [
    "apps/web/src",
    "apps/mobile/src",
    "services/api/src",
    "packages/shared/src"
  ],
  "references": [
    { "path": "./packages/shared" },
    { "path": "./services/api" },
    { "path": "./apps/web" }
  ]
}
