# Vision Platform Environment Configuration
# Copy this file to .env and configure your values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Environment
NODE_ENV=development
ENVIRONMENT=development

# Application Settings
APP_NAME=Vision Platform
APP_VERSION=1.0.0
APP_PORT=3000
API_PORT=3001
AI_SERVICE_PORT=8000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Configuration
MONGODB_URI=mongodb://admin:password123@localhost:27017/vision_platform?authSource=admin
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password123
MONGO_DATABASE=vision_platform
MONGO_HOST=localhost
MONGO_PORT=27017

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# OBJECT STORAGE CONFIGURATION
# =============================================================================

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=vision-platform
MINIO_REGION=us-east-1
MINIO_USE_SSL=false

# AWS S3 Configuration (Alternative to MinIO)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=vision-platform
AWS_S3_ENDPOINT=

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=vision-platform
JWT_AUDIENCE=vision-platform-users

# Password Configuration
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=128

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=24*60*60*1000
COOKIE_SECRET=your-cookie-secret-key

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORGANIZATION=your_openai_organization
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your_google_cloud_project
GOOGLE_CLOUD_CREDENTIALS=your_google_cloud_credentials_json
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key
GOOGLE_SPEECH_API_KEY=your_google_speech_api_key
GOOGLE_VISION_API_KEY=your_google_vision_api_key

# Hugging Face Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key
HUGGINGFACE_MODEL_CACHE_DIR=./models
HUGGINGFACE_USE_CACHE=true

# Azure AI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name

# Local AI Models Configuration
USE_LOCAL_MODELS=false
LOCAL_MODEL_PATH=./models
ENABLE_GPU=false
GPU_MEMORY_LIMIT=4GB

# =============================================================================
# EXTERNAL SERVICES CONFIGURATION
# =============================================================================

# Email Service Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
SMTP_FROM=noreply@vision-platform.com
SMTP_SECURE=true

# SMS Service Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Push Notification Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# =============================================================================
# MONITORING & LOGGING CONFIGURATION
# =============================================================================

# Sentry Configuration
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=5

# Metrics Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Core Features
ENABLE_REAL_TIME_TRANSLATION=true
ENABLE_OFFLINE_MODE=false
ENABLE_ADVANCED_OCR=true
ENABLE_VOICE_NAVIGATION=true
ENABLE_OBJECT_DETECTION=true
ENABLE_SCENE_DESCRIPTION=true
ENABLE_MULTIMODAL_AI=true

# Accessibility Features
ENABLE_VOICE_CONTROL=true
ENABLE_HAPTIC_FEEDBACK=true
ENABLE_HIGH_CONTRAST=true
ENABLE_SCREEN_READER=true

# Privacy Features
ENABLE_CLOUD_PROCESSING=true
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTS=true
ENABLE_TELEMETRY=false

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_CHECK_PERIOD=600

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# File Upload Configuration
MAX_FILE_SIZE=10485760
MAX_BATCH_SIZE=100
ALLOWED_FILE_TYPES=image/*,audio/*,video/*,text/*

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# CORS Settings
CORS_ORIGIN=http://localhost:3000,http://localhost:19006
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================

# WebSocket Settings
WEBSOCKET_PATH=/socket.io
WEBSOCKET_CORS_ORIGIN=http://localhost:3000
WEBSOCKET_PING_TIMEOUT=60000
WEBSOCKET_PING_INTERVAL=25000

# =============================================================================
# INTERNATIONALIZATION CONFIGURATION
# =============================================================================

# Default Language Settings
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ru,ja,ko,zh,ar,hi,tr,nl,pl,sv
FALLBACK_LANGUAGE=en

# Translation Configuration
TRANSLATION_CACHE_TTL=86400
TRANSLATION_MEMORY_SIZE=10000
ENABLE_AUTO_LANGUAGE_DETECTION=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Settings
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_MODE=true
ENABLE_SOURCE_MAPS=true
ENABLE_FAST_REFRESH=true

# Testing Configuration
TEST_DATABASE_URL=mongodb://admin:password123@localhost:27017/vision_platform_test
TEST_REDIS_URL=redis://localhost:6379/1
ENABLE_TEST_COVERAGE=true
TEST_TIMEOUT=30000

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Production Settings
ENABLE_HTTPS=true
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
ENABLE_CDN=false

# Load Balancer Configuration
LOAD_BALANCER_ENABLED=false
LOAD_BALANCER_HEALTH_CHECK_PATH=/health
LOAD_BALANCER_HEALTH_CHECK_INTERVAL=30

# =============================================================================
# BACKUP & RECOVERY CONFIGURATION
# =============================================================================

# Backup Configuration
ENABLE_AUTO_BACKUP=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# Recovery Configuration
ENABLE_AUTO_RECOVERY=false
RECOVERY_CHECK_INTERVAL=300000
RECOVERY_MAX_ATTEMPTS=3

# =============================================================================
# SECURITY HEADERS CONFIGURATION
# =============================================================================

# Security Headers
ENABLE_HELMET=true
ENABLE_CSP=true
ENABLE_HSTS=true
ENABLE_XSS_PROTECTION=true
ENABLE_CONTENT_TYPE_NOSNIFF=true
ENABLE_FRAMEGUARD=true

# Content Security Policy
CSP_DEFAULT_SRC="'self'"
CSP_SCRIPT_SRC="'self' 'unsafe-inline' 'unsafe-eval'"
CSP_STYLE_SRC="'self' 'unsafe-inline'"
CSP_IMG_SRC="'self' data: https:"
CSP_FONT_SRC="'self' https:"
CSP_CONNECT_SRC="'self' ws: wss:"

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================

# Google Analytics
GOOGLE_ANALYTICS_ID=your_ga_id
GOOGLE_ANALYTICS_ENABLED=false

# Mixpanel
MIXPANEL_TOKEN=your_mixpanel_token
MIXPANEL_ENABLED=false

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Email Notifications
ENABLE_EMAIL_NOTIFICATIONS=true
NOTIFICATION_EMAIL_FROM=noreply@vision-platform.com
NOTIFICATION_EMAIL_TEMPLATE_PATH=./templates/emails

# Push Notifications
ENABLE_PUSH_NOTIFICATIONS=true
PUSH_NOTIFICATION_TTL=86400

# =============================================================================
# API DOCUMENTATION CONFIGURATION
# =============================================================================

# Swagger/OpenAPI Configuration
ENABLE_SWAGGER=true
SWAGGER_TITLE=Vision Platform API
SWAGGER_DESCRIPTION=Complete Vision Platform API Documentation
SWAGGER_VERSION=1.0.0
SWAGGER_BASE_PATH=/api/v1

# API Rate Limiting
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=1000
API_RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# =============================================================================
# MOBILE APP CONFIGURATION
# =============================================================================

# Expo Configuration
EXPO_PROJECT_ID=your_expo_project_id
EXPO_ACCESS_TOKEN=your_expo_access_token
EXPO_PUBLISH_URL=https://exp.host/@your-username/vision-platform

# Mobile App Settings
MOBILE_APP_VERSION=1.0.0
MOBILE_APP_BUILD_NUMBER=1
MOBILE_APP_BUNDLE_IDENTIFIER=com.visionplatform.app

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Stripe Configuration (for payments)
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# =============================================================================
# ENVIRONMENT-SPECIFIC OVERRIDES
# =============================================================================

# Development Overrides
if [ "$NODE_ENV" = "development" ]; then
    LOG_LEVEL=debug
    ENABLE_DEBUG_MODE=true
    ENABLE_HOT_RELOAD=true
    CORS_ORIGIN=http://localhost:3000,http://localhost:19006
fi

# Production Overrides
if [ "$NODE_ENV" = "production" ]; then
    LOG_LEVEL=warn
    ENABLE_DEBUG_MODE=false
    ENABLE_HOT_RELOAD=false
    ENABLE_HTTPS=true
    ENABLE_COMPRESSION=true
    ENABLE_CACHING=true
fi

# Testing Overrides
if [ "$NODE_ENV" = "test" ]; then
    LOG_LEVEL=error
    ENABLE_DEBUG_MODE=false
    ENABLE_HOT_RELOAD=false
    ENABLE_ANALYTICS=false
    ENABLE_TELEMETRY=false
fi
