# Vision Platform Environment Configuration

# =============================================================================
# Database Configuration
# =============================================================================
MONGODB_URI=mongodb://localhost:27017/vision
MONGODB_DB_NAME=vision
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# =============================================================================
# API Service Configuration
# =============================================================================
API_PORT=3001
API_HOST=0.0.0.0
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# AI Service Configuration
# =============================================================================
AI_SERVICE_PORT=8000
AI_SERVICE_HOST=0.0.0.0
AI_MODEL_CACHE_DIR=/app/models
ENABLE_OFFLINE_MODELS=true

# =============================================================================
# Translation Models
# =============================================================================
TRANSLATION_MODEL=marian  # marian, openai, local
STT_MODEL=whisper         # whisper, vosk, local
OCR_MODEL=paddle          # paddle, tesseract, local
TTS_MODEL=tacotron        # tacotron, gtts, local

# =============================================================================
# Cloud AI Services (Optional)
# =============================================================================
OPENAI_API_KEY=your-openai-api-key
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
AZURE_COGNITIVE_SERVICES_KEY=your-azure-key
AZURE_COGNITIVE_SERVICES_ENDPOINT=your-azure-endpoint

# =============================================================================
# Storage Configuration
# =============================================================================
STORAGE_TYPE=local  # local, s3, azure, gcp
S3_BUCKET=vision-storage
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_ENDPOINT=http://localhost:9000  # MinIO for local development

# =============================================================================
# Security Configuration
# =============================================================================
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# =============================================================================
# Monitoring & Logging
# =============================================================================
LOG_LEVEL=info  # error, warn, info, debug
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_PORT=9090
ENABLE_METRICS=true

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_SCENE_DESCRIPTION=true
ENABLE_OBJECT_DETECTION=true
ENABLE_VOICE_COMMANDS=true
ENABLE_NAVIGATION_ASSISTANCE=true
ENABLE_PRIVACY_MODE=false

# =============================================================================
# Development Configuration
# =============================================================================
DEBUG=true
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_LOGGING=true
SKIP_SSL_VERIFICATION=false

# =============================================================================
# Testing Configuration
# =============================================================================
TEST_DATABASE_URI=mongodb://localhost:27017/vision-test
TEST_REDIS_URL=redis://localhost:6379/1
COVERAGE_THRESHOLD=80
