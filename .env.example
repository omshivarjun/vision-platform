# Database
MONGODB_URI=mongodb://admin:password@localhost:27017/multimodal?authSource=admin
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/multimodal

# Redis
REDIS_URL=redis://localhost:6379
REDIS_URL_PROD=redis://redis-cluster.example.com:6379

# Storage
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=multimodal-files
S3_REGION=us-east-1

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# AI Service URLs
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_URL_PROD=https://ai-service.example.com

# Frontend URLs
FRONTEND_URL=http://localhost:3000
FRONTEND_URL_PROD=https://app.example.com

# API Keys (replace with actual keys)
OPENAI_API_KEY=your-openai-api-key
GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=your-azure-region

# Feature Flags
ENABLE_OFFLINE_TRANSLATION=true
ENABLE_CLOUD_TRANSLATION=true
ENABLE_OFFLINE_OCR=true
ENABLE_CLOUD_OCR=true
ENABLE_OFFLINE_STT=true
ENABLE_CLOUD_STT=true

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Development
NODE_ENV=development
DEBUG=true
